<div class="wrap multiple_authors-admin {{ show_sidebar ? 'allex_container_with_sidebar multiple_authors_with_sidebar container' : '' }}">
    <div class="allex-row">
        <div class="{{ show_sidebar ? 'allex-col-3-4' : 'allex-col-1' }}">
            {% if show_tabs %}
                <h2 class="nav-tab-wrapper">
                    {% for module in modules %}
                        {% if not module.options_page is empty and module.options.enabled == 'on' %}
                            <a
                                    href="?page={{ slug }}&module={{ module.settings_slug }}"
                                    class="nav-tab {% if settings_slug == module.settings_slug %}nav-tab-active{% endif %}">

                                {{ module.title }}
                            </a>
                        {% endif %}
                    {% endfor %}
                </h2>
            {% endif %}

            <div class="ppma-module-settings">{{ module_output|raw }}</div>
        </div>

        {% if show_sidebar %}
            <div class="allex-col-1-4">
                {{ sidebar_output|raw }}
            </div>
        {% endif %}
    </div>
</div>
